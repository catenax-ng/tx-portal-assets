{
  "name": "cx-portal-assets",
  "version": "1.0.0",
  "description": "Shared frontend content and static assets for the Catena-X Portal",
  "main": "index.js",
  "repository": "git@github.com:eclipse-tractusx/portal-assets.git",
  "license": "Apache-2.0",
  "type": "module",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "directory-tree": "^3.5.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "zero-md": "^2.4.0"
  },
  "scripts": {
    "build:docs": "node src/documentation/Tree.js",
    "build:tag": "yarn build:docs && ./scripts/create-tag.sh ${1}",
    "build": "yarn build:tag && mkdir -p ./public/documentation/js/lib && cp -R ./node_modules/zero-md/dist/zero-md.min* ./public/documentation/js/lib/",
    "build:sources": "zip -r portal-assets.zip src package.json yarn.lock -x '*.stories.*' -x '*.test.*' -x '*.ttf' -x '*.svg' -x '*.png'",
    "start": "concurrently \"yarn start:assets\" \"yarn start:proxy\" \"open http://localhost:3000/\"",
    "start:proxy": "node src/proxy/index.cjs",
    "start:assets": "http-server -a localhost -p 3003"
  }
}
